<Window x:Class="QuanLyHocSinh.View.Dialogs.SuaDiemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodel="clr-namespace:QuanLyHocSinh.ViewModel.TraCuu"
        Title="Sửa điểm học sinh" Height="600" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="THÔNG TIN ĐIỂM HỌC SINH"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,10">
            <TextBox materialDesign:HintAssist.Hint="Học sinh"
                      Text="{Binding HoTen}"
                      IsReadOnly="True"
                      Margin="0,5"/>

            <ComboBox materialDesign:HintAssist.Hint="Môn học"
                      ItemsSource="{Binding DanhSachMonHoc}"
                      SelectedItem="{Binding MonHoc}"
                      Margin="0,5"/>

            <TextBox materialDesign:HintAssist.Hint="Điểm miệng"
                     Text="{Binding DiemMieng, StringFormat='F2', UpdateSourceTrigger=PropertyChanged}"
                     PreviewTextInput="NumberValidationTextBox"
                     Margin="0,5"/>

            <TextBox materialDesign:HintAssist.Hint="Điểm 15 phút"
                     Text="{Binding Diem15p, StringFormat='F2', UpdateSourceTrigger=PropertyChanged}"
                     PreviewTextInput="NumberValidationTextBox"
                     Margin="0,5"/>

            <TextBox materialDesign:HintAssist.Hint="Điểm 1 tiết"
                     Text="{Binding Diem1Tiet, StringFormat='F2', UpdateSourceTrigger=PropertyChanged}"
                     PreviewTextInput="NumberValidationTextBox"
                     Margin="0,5"/>

            <TextBox materialDesign:HintAssist.Hint="Điểm thi"
                     Text="{Binding DiemThi, StringFormat='F2', UpdateSourceTrigger=PropertyChanged}"
                     PreviewTextInput="NumberValidationTextBox"
                     Margin="0,5"/>

            <TextBox materialDesign:HintAssist.Hint="Điểm trung bình"
                     Text="{Binding DiemTB, StringFormat='F2'}"
                     IsReadOnly="True"
                     Margin="0,5"/>

            <Button Content="Lưu"
                    Command="{Binding SaveCommandDiem}"
                    Margin="0,10"/>

            <Button Content="Hủy"
                    Command="{Binding CancelCommandDiem}"
                    Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
                     
                     
                     
                     
