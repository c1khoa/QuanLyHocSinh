<UserControl x:Class="QuanLyHocSinh.View.Dialogs.MessageBox.ConfirmDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#03a9f4"
             d:DesignHeight="250" d:DesignWidth="500">
    <Control.Resources>
        <Style x:Key="RoundedOuterBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Background" Value="#D0F0FD"/>
            <Setter Property="Margin" Value="20"/>
        </Style>
        <Style x:Key="ImageBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Background" Value="#03a9f4"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="20 80 20 80"/>
    </Style>
    </Control.Resources>
    <Border Margin="10" Style="{StaticResource RoundedOuterBorder}">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Icon & tiêu đề -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="❓" FontSize="28" Margin="0 0 10 0"/>
            <TextBlock Text="Xác nhận" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Nội dung -->
        <TextBlock Grid.Row="1"
                   Text="{Binding Message}"
                   FontSize="16"
                   TextWrapping="Wrap"
                   Margin="0 10 0 20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>

        <!-- Nút hành động -->
            <Grid Grid.Row="2" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1" Style="{StaticResource ImageBorderStyle}" Background="#EF9A9A" 
                        Margin="30,0,30,0">
                    <Button Content="Hủy" Margin="-10"
                            Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                            CommandParameter="False"
                            Style="{StaticResource MaterialDesignRaisedLightButton}" 
                            Background="Transparent" BorderBrush="Transparent" 
                            FontWeight="Bold"/>
                </Border>
                <Border Grid.Column="0" Style="{StaticResource ImageBorderStyle}" 
                        Background="#90CAF9" Margin="30,0,30,0">
                    <Button Content="Đồng ý" Margin="-10"
                            Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                            CommandParameter="True"
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            Background="Transparent" BorderBrush="Transparent"
                            FontWeight="Bold"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
