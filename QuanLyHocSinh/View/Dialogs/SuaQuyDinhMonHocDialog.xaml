<Window x:Class="QuanLyHocSinh.View.Dialogs.SuaQuyDinhMonHocDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sửa quy định môn học" Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Margin="20" BorderBrush="#03a9f4" BorderThickness="2" Background="#D0F0FD" CornerRadius="20">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="SỬA QUY ĐỊNH MÔN HỌC" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                    <TextBlock Text="Số lượng môn học:"/>
                    <TextBox Text="{Binding SoLuongMonHoc, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                    <TextBlock Text="Điểm đạt:"/>
                    <TextBox Text="{Binding DiemDat, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                    <TextBlock Text="Danh sách môn học:" Margin="0,10,0,0"/>
                    <ItemsControl ItemsSource="{Binding DanhSachMonHoc}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBox Text="{Binding TenMonHoc, UpdateSourceTrigger=PropertyChanged}" Width="250" Margin="0,0,10,0"/>
                                    <!-- Có thể thêm nút xóa nếu muốn -->
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Lưu" Command="{Binding SaveCommand}" Style="{StaticResource DialogButtonStyle}"/>
                    <Button Content="Hủy" Command="{Binding CancelCommand}" Style="{StaticResource DialogButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </ScrollViewer>
</Window>