<Window x:Class="QuanLyHocSinh.View.Dialogs.SuaTaiKhoanDiaLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyHocSinh.View.Dialogs"
        xmlns:viewmodel="clr-namespace:QuanLyHocSinh.ViewModel.QuanLyTaiKhoan"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        Title="Sửa thông tin tài khoản" Height="600" Width="500">
    <Window.Resources>
        <Style x:Key="ImageBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryMidBrush}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="20 80 20 80"/>
        </Style>
    </Window.Resources>
    <Grid Background="#F4F6F8">
        <materialDesign:Card Padding="24" 
                             HorizontalAlignment="Center" 
                             Width="500">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Sửa Tài Khoản"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Foreground="#2C3E50"/>

                <Grid Grid.Row="1" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="User ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,8"/>
                    <TextBox Text="{Binding EditedUser.UserID}" IsEnabled="{Binding IsEditableUserID}"
                             Grid.Row="0" Grid.Column="1"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                    <TextBlock Text="Họ và tên:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,8"/>
                    <TextBox Text="{Binding EditedUser.HoTen, UpdateSourceTrigger=PropertyChanged}"
                             Grid.Row="1" Grid.Column="1"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                    <TextBlock Text="Tên đăng nhập:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,8"/>
                    <TextBox Text="{Binding EditedUser.TenDangNhap, UpdateSourceTrigger=PropertyChanged}"
                             Grid.Row="2" Grid.Column="1"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                    <TextBlock Text="Vai trò:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,8"/>
                    <ComboBox ItemsSource="{Binding Roles}"
                              SelectedValue="{Binding EditedUser.VaiTroID}"
                              SelectedValuePath="VaiTroID"
                              DisplayMemberPath="TenVaiTro"
                              IsEnabled="{Binding CanEditRole}"
                              Grid.Row="3" Grid.Column="1"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}" />

                    <TextBlock Text="Mật khẩu mới:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,8"/>
                    <PasswordBox x:Name="pwdNewPassword"
                                 PasswordChanged="pwdNewPassword_PasswordChanged"
                                 Grid.Row="4" Grid.Column="1"
                                 materialDesign:HintAssist.Hint="Để trống nếu không đổi"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}" />

                    <TextBlock Text="Xác nhận mật khẩu:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,8"/>
                    <PasswordBox x:Name="pwdConfirmPassword"
                                 PasswordChanged="pwdConfirmPassword_PasswordChanged"
                                 Grid.Row="5" Grid.Column="1"
                                 materialDesign:HintAssist.Hint="Nhập lại mật khẩu"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}" />
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="1"
                    Style="{StaticResource ImageBorderStyle}" 
                    Background="#FF90CAF9"
                    VerticalAlignment="Center" 
                    Margin="50 0 50 0">
                        <Button Command="{Binding SaveCommand}" 
                        CommandParameter="{Binding ElementName=passwordfield, Path=Password}"
                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontWeight="Regular"
                        Content="Lưu"/>
                    </Border>
                    <Border Grid.Column="0"
                    Style="{StaticResource ImageBorderStyle}" 
                    Background="#F08080"
                    VerticalAlignment="Center" 
                    Margin="50 0 50 0">
                        <Button Command="{Binding CancelCommand}" 
                        CommandParameter="{Binding ElementName=passwordfield, Path=Password}"
                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontWeight="Regular"
                        Content="Hủy"/>
                    </Border>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
