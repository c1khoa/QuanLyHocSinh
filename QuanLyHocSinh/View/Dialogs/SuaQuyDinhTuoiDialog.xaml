<Window x:Class="QuanLyHocSinh.View.Dialogs.SuaQuyDinhTuoiDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sửa quy định tuổi" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Margin="20" BorderBrush="#03a9f4" BorderThickness="2" Background="#D0F0FD" CornerRadius="20">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="SỬA QUY ĐỊNH TUỔI" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                    <TextBlock Text="Tuổi tối thiểu học sinh:"/>
                    <TextBox Text="{Binding TuoiToiThieuHS, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                    <TextBlock Text="Tuổi tối đa học sinh:"/>
                    <TextBox Text="{Binding TuoiToiDaHS, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                    <TextBlock Text="Tuổi tối thiểu giáo viên:" Margin="0,10,0,0"/>
                    <TextBox Text="{Binding TuoiToiThieuGV, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                    <TextBlock Text="Tuổi tối đa giáo viên:"/>
                    <TextBox Text="{Binding TuoiToiDaGV, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Lưu" Command="{Binding SaveCommand}" Style="{StaticResource DialogButtonStyle}"/>
                    <Button Content="Hủy" Command="{Binding CancelCommand}" Style="{StaticResource DialogButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </ScrollViewer>
</Window>