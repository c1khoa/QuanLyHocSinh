<UserControl x:Class="QuanLyHocSinh.View.Controls.QuanLyTaiKhoan.QuanLyTaiKhoanThemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.QuanLyTaiKhoan"
             Background="White"
             FontSize="13"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:viewmodel="clr-namespace:QuanLyHocSinh.ViewModel" 
             xmlns:qltaikhoan="clr-namespace:QuanLyHocSinh.ViewModel.QuanLyTaiKhoan"
             d:DataContext="{d:DesignInstance Type=qltaikhoan:QuanLyTaiKhoanThemViewModel}"
             Name="ucQuanLyTaiKhoanThem"
             mc:Ignorable="d"
             MinHeight="600" MinWidth="800">
    <Border Margin="70"
            BorderBrush="#03a9f4"
            BorderThickness="2"
            Background="#D0F0FD"
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock Text="THÊM TÀI KHOẢN"
                    FontSize="24"
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="10 10 0 10"/>
            </Grid>

            <Border Grid.Row="1"
                BorderThickness="1"
                CornerRadius="10"
                BorderBrush="#03a9f4"
                Background="White" 
                Margin="50 0 50 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="UserID" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
                        <TextBlock Grid.Row="1" Text="Họ và Tên" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
                        <TextBlock Grid.Row="2" Text="Tên đăng nhập" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
                        <TextBlock Grid.Row="3" Text="Mật khẩu" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
                        <TextBlock Grid.Row="4" Text="Vai trò" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <!-- UserID -->
                        <Grid Grid.Row="0">
                            <Grid Background="#f5f6f7" Margin="10" materialDesign:ButtonAssist.CornerRadius="10">
                                <TextBox x:Name="txtUserID"
                                         Margin="10,0,30,0"
                                         VerticalContentAlignment="Center"
                                         Background="Transparent"
                                         FontSize="13"
                                         Foreground="Gray"
                                         materialDesign:HintAssist.Hint="UserID"
                                         BorderThickness="0"
                                         Text="{Binding UserID, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                        </Grid>

                        <!-- Họ và tên -->
                        <Grid Grid.Row="1">
                            <Grid Background="#f5f6f7" Margin="10" materialDesign:ButtonAssist.CornerRadius="10">
                                <TextBox x:Name="txtUserName"
                                         Margin="10,0,30,0"
                                         VerticalContentAlignment="Center"
                                         Background="Transparent"
                                         FontSize="13"
                                         Foreground="Gray"
                                         materialDesign:HintAssist.Hint="Họ và Tên"
                                         BorderThickness="0"
                                         Text="{Binding HoTen, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                        </Grid>

                        <!-- Tên đăng nhập -->
                        <Grid Grid.Row="2">
                            <Grid Background="#f5f6f7" Margin="10" materialDesign:ButtonAssist.CornerRadius="10">
                                <TextBox x:Name="txtUserLogin"
                                         Margin="10,0,30,0"
                                         VerticalContentAlignment="Center"
                                         Background="Transparent"
                                         FontSize="13"
                                         Foreground="Gray"
                                         materialDesign:HintAssist.Hint="Tên đăng nhập"
                                         BorderThickness="0"
                                         Text="{Binding TenDangNhap, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                        </Grid>

                        <!-- Mật khẩu -->
                        <Grid Grid.Row="3" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>

                            <PasswordBox x:Name="txtUserPassWord"
                                         Grid.Column="0"
                                         Margin="10,0,30,0"
                                         VerticalContentAlignment="Center"
                                         Background="Transparent"
                                         FontSize="13"
                                         Foreground="Gray"
                                         materialDesign:HintAssist.Hint="Mật khẩu"
                                         BorderThickness="0"
                                         PasswordChar="●"
                                         PasswordChanged="txtUserPassWord_PasswordChanged"/>

                            <TextBox x:Name="txtUserPassWordVisible"
                                     Grid.Column="0"
                                     VerticalContentAlignment="Center"
                                     Background="Transparent"
                                     FontSize="14"
                                     Foreground="Black"
                                     Visibility="Collapsed"
                                     TextChanged="txtUserPassWordVisible_TextChanged"
                                     Padding="5"/>

                            <ToggleButton Grid.Column="1" 
                                          Width="30" 
                                          Height="30" 
                                          VerticalAlignment="Center" 
                                          Margin="5,0,0,0"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          ToolTip="Hiện/Ẩn mật khẩu"
                                          Checked="btnShowHidePassword_Checked"
                                          Unchecked="btnShowHidePassword_Unchecked">
                                <materialDesign:PackIcon x:Name="EyeIcon" Kind="Eye" Width="24" Height="24" Foreground="Black"/>
                            </ToggleButton>
                        </Grid>

                        <!-- Vai trò -->
                        <ComboBox x:Name="cbVaiTro"
                                  Grid.Row="4"
                                  Margin="10"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                  materialDesign:HintAssist.Hint="Vai trò"
                                  FontSize="13"
                                  ItemsSource="{Binding Roles}"
                                  DisplayMemberPath="TenVaiTro"
                                  SelectedValuePath="VaiTroID"
                                  SelectedValue="{Binding VaiTroID, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </Grid>
            </Border>

            <Grid Grid.Row="2" VerticalAlignment="Center" Margin="50 0 50 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                        Background="#EF9A9A"
                        Margin="50 0 50 0"
                        FontSize="13"
                        Content="Hủy"
                        FontWeight="Bold"/>

                <Button Grid.Column="1" 
                        Command="{Binding AddAccountCommand}"
                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                        Background="#4CAF50"
                        Margin="50 0 50 0"
                        FontSize="13"
                        Content="Thêm"
                        FontWeight="Bold"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>