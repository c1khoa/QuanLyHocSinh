<UserControl x:Class="QuanLyHocSinh.View.Controls.QuanLyTaiKhoan.QuanLyTaiKhoanSuaUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.QuanLyTaiKhoan"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Margin="70"
                BorderBrush="#03a9f4"
                BorderThickness="2"
                Background="#D0F0FD"
                CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Text="SỬA TÀI KHOẢN"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="10"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="10">
                        <TextBlock Text="Tên đăng nhập:" FontSize="16" Margin="0 0 0 5"/>
                        <TextBox Name="txtUsername" FontSize="14" Margin="0 0 0 10"/>

                        <TextBlock Text="Mật khẩu:" FontSize="16" Margin="0 0 0 5"/>
                        <PasswordBox Name="pwdPassword" FontSize="14" Margin="0 0 0 10"/>

                        <TextBlock Text="Xác nhận mật khẩu:" FontSize="16" Margin="0 0 0 5"/>
                        <PasswordBox Name="pwdConfirmPassword" FontSize="14" Margin="0 0 0 10"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10">
                        <TextBlock Text="UserID:" FontSize="16" Margin="0 0 0 5"/>
                        <TextBox Name="txtEmail" FontSize="14" Margin="0 0 0 10"/>

                        <TextBlock Text="Họ và tên:" FontSize="16" Margin="0 0 0 5"/>
                        <TextBox Name="txtFullName" FontSize="14" Margin="0 0 0 10"/>

                        <TextBlock Text="Vai trò:" FontSize="16" Margin="0 0 0 5"/>
                        <ComboBox x:Name="txtUserFunction"
                                  FontSize="13"
                                  IsEditable="False"
                                  Margin="0 0 0 10">
                            <ComboBoxItem Content="Học sinh"/>
                            <ComboBoxItem Content="Giáo viên"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2">
                    <Button Style="{StaticResource MaterialDesignRaisedLightButton}"
                            FontWeight="Bold"
                            Margin="250,0,250,12"
                            Content="LƯU THAY ĐÔI">
                    </Button>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</UserControl>
