<UserControl x:Class="QuanLyHocSinh.View.Controls.QuanLyTaiKhoan.QuanLyTaiKhoanMainUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.QuanLyTaiKhoan"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:viewmodel="clr-namespace:QuanLyHocSinh.ViewModel.QuanLyTaiKhoan" 
             Background="White"
             FontSize="13"
             d:DataContext="{d:DesignInstance Type=viewmodel:QuanLyTaiKhoanMainViewModel}"
             Name="ucQuanLyTaiKhoan"
             mc:Ignorable="d"
             MinHeight="600" MinWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <Grid Grid.Row="0">
            <TextBlock Text="QUẢN LÝ TÀI KHOẢN"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10"/>
        </Grid>

        <!-- Thanh công cụ lọc và thêm -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Tìm kiếm -->
            <Grid Grid.Column="0">
                <Grid Background="#f5f6f7" Margin="10" materialDesign:ButtonAssist.CornerRadius="10">
                    <TextBox Margin="10,0,30,0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center"
                             Background="Transparent"
                             FontSize="13"
                             Foreground="Gray"
                             materialDesign:HintAssist.Hint="User ID"
                             BorderThickness="0"/>
                    <materialDesign:PackIcon Kind="Search"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"/>
                </Grid>
            </Grid>

            <!-- Vai trò -->
            <Grid Grid.Column="1">
                <ComboBox materialDesign:HintAssist.Hint="Vai trò"
                          IsEditable="False"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          Margin="10"
                          FontSize="13">
                    <ComboBoxItem Content="Học sinh"/>
                    <ComboBoxItem Content="Giáo viên"/>
                </ComboBox>
            </Grid>

            <!-- Nút Lọc
            <Border Grid.Column="2" Margin="20" BorderThickness="1"
                    CornerRadius="10" BorderBrush="#03a9f4" Background="#D0F0FD">
                <Button ToolTip="Lọc tài khoản"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Margin="-10">
                        <materialDesign:PackIcon Kind="Filter" VerticalAlignment="Center" Foreground="Black"/>
                        <TextBlock Text="Lọc" Margin="10 0 0 0" FontWeight="Regular"
                                   Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border> -->

            <!-- Nút Sửa 
            <Border Grid.Column="3" Margin="20" BorderThickness="0"
                    CornerRadius="10" Background="#FFC107">
                <Button Command="{Binding SuaTaiKhoanCommand}"
                        ToolTip="Sửa tài khoản"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        IsEnabled="{Binding CanEditCurrentUser}"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Margin="-10">
                        <materialDesign:PackIcon Kind="Edit" VerticalAlignment="Center" Foreground="Black"/>
                        <TextBlock Text="Sửa" Margin="10 0 0 0" FontWeight="Regular"
                                   Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>-->

            <!-- Nút Xóa 
            <Border Grid.Column="4" Margin="20" BorderThickness="0"
                    CornerRadius="10" Background="#F44336">
                <Button Command="{Binding XoaTaiKhoanCommand}"
                        CommandParameter="{Binding SelectedItem, ElementName=dataGridTaiKhoan}"
                        ToolTip="Xóa tài khoản"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        IsEnabled="{Binding CanDeleteCurrentUser}"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Margin="-10">
                        <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Foreground="Black"/>
                        <TextBlock Text="Xóa" Margin="10 0 0 0" FontWeight="Regular"
                                   Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>-->

            <!-- Nút Thêm -->
            <Border Grid.Column="5" Margin="20" BorderThickness="0"
                    CornerRadius="10" Background="#0078D7">
                <Button Command="{Binding ShowThemTaiKhoanCommand}"
                        ToolTip="Thêm tài khoản"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Margin="-10">
                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Foreground="Black"/>
                        <TextBlock Text="Thêm" Margin="10 0 0 0" FontWeight="Regular"
                                   Foreground="Black" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>
        </Grid>

        <!-- Bảng dữ liệu -->
        <Grid Grid.Row="2" Margin="10">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          CanContentScroll="False">
                <Grid>
                    <DataGrid x:Name="dataGridTaiKhoan"
                              ItemsSource="{Binding FilteredUsers}"
                              SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="All"
                              FontSize="13"
                              IsReadOnly="True"
                              RowHeight="40"
                              ColumnHeaderHeight="40"
                              MinWidth="1100"
                              HorizontalAlignment="Left"
                              SelectionMode="Single">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Background" Value="#E0E0E0"/>
                                <Setter Property="Height" Value="40"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="👤" Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <materialDesign:PackIcon Kind="AccountCircle"
                                                                 Width="20" Height="20"
                                                                 HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="UserID" Binding="{Binding UserID}" Width="150"/>
                            <DataGridTextColumn Header="Họ và Tên" Binding="{Binding HoTen}" Width="250"/>
                            <DataGridTextColumn Header="Tên đăng nhập" Binding="{Binding TenDangNhap}" Width="250"/>
                            <DataGridTextColumn Header="Mật khẩu" Binding="{Binding MatKhau}" Width="200"/>
                            <DataGridTextColumn Header="Vai trò" Binding="{Binding VaiTro.TenVaiTro, TargetNullValue='[Chưa có vai trò]', FallbackValue='[Lỗi]'}" Width="100"/>
                         
                              
                                <DataGridTemplateColumn Header="" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                            ToolTip="Sửa tài khoản"
                                            Command="{Binding DataContext.SuaTaiKhoanCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Pencil" Foreground="#0078D7" Width="18" Height="18"/>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                            <DataGridTemplateColumn Header="" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.XoaTaiKhoanCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignToolButton}"
                                            ToolTip="Xoá tài khoản">
                                            <materialDesign:PackIcon Kind="TrashCanOutline" Width="18" Height="18"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>




                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
