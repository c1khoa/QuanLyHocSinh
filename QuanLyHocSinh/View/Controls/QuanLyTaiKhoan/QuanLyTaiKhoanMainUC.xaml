<UserControl x:Class="QuanLyHocSinh.View.Controls.QuanLyTaiKhoan.QuanLyTaiKhoanMainUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.QuanLyTaiKhoan"

             Background="White"
             FontSize="13"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:viewmodel="clr-namespace:QuanLyHocSinh.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:ControlBarViewModel}"
             Name="ucQuanLyTaiKhoan"
             mc:Ignorable="d"
             MinHeight="600" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            
            <Grid Grid.Column="0">
                <TextBlock Text="QUẢN LÝ TÀI KHOẢN"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10 10 0 10"/>
            </Grid>
            
        </Grid>
        <Grid Grid.Row="1">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">

                <Grid Background="#f5f6f7" 
                      Margin="10"
                      materialDesign:ButtonAssist.CornerRadius="10"
>
                    <TextBox Margin="10,0,30,0"
                             VerticalContentAlignment="Center"
                             Background="Transparent"
                             FontSize="13"
                             Foreground="Gray"
                             Text="Họ và Tên"
                             BorderThickness="0"/>
                    <materialDesign:PackIcon Kind="Search"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"/>
                </Grid>

            </Grid>
            
            <Grid Grid.Column="1">
                <ComboBox materialDesign:HintAssist.Hint="Vai trò"
                          IsEditable="False"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          Margin="10"
                          FontSize="13">

                    <ComboBoxItem IsSelected="False"
                                  Content="Học sinh"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="Giáo viên"/>
                </ComboBox>
            </Grid>

            <Border Grid.Column="2"
                    Margin="20"
                    BorderThickness="1"
                    CornerRadius="10"
                    BorderBrush="#03a9f4"
                    Background="#D0F0FD">
                <Button ToolTip="Lọc tài khoản"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal"
                                Margin="-10">
                        <materialDesign:PackIcon Kind="Filter"
                                                 VerticalAlignment="Center"
                                                 Foreground="Black"/>
                        <TextBlock Text="Lọc"
                                   Margin="10 0 0 0"
                                   FontWeight="Regular"
                                   Foreground="Black"           
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>


            <Border Grid.Column="3"
                    Margin="20"
                    BorderThickness="0"
                    CornerRadius="10"
                    BorderBrush="#03a9f4"
                    Background="#0078D7">

                <Button ToolTip="Lọc tài khoản"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal"
                                Margin="-10">
                        <materialDesign:PackIcon Kind="Plus"
                                                 VerticalAlignment="Center"
                                                 Foreground="Black"/>
                        <TextBlock Text="Thêm"
                                   Margin="10 0 0 0"
                                   FontWeight="Regular"
                                   Foreground="Black"           
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
            </Border>
            
        </Grid>
        <Grid Grid.Row="2">
            <ListView ItemsSource="{Binding User}">
                <ListView.View>
                    
                    <GridView>
                        <GridViewColumn Header="UserID" 
                                        DisplayMemberBinding="{Binding username}" 
                                        Width="120"/>
                        <GridViewColumn Header="Họ và Tên" 
                                        DisplayMemberBinding="{Binding fullname}" 
                                        Width="150"/>
                        <GridViewColumn Header="Tên đăng nhập" 
                                        DisplayMemberBinding="{Binding username}" 
                                        Width="200"/>
                        <GridViewColumn Header="Mật khẩu" 
                                        DisplayMemberBinding="{Binding password}" 
                                        Width="200"/>
                        <GridViewColumn Header="Vai trò" 
                                        DisplayMemberBinding="{Binding role}" 
                                        Width="120"/>
                    </GridView>
                    
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</UserControl>