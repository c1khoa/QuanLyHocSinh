<UserControl x:Class="QuanLyHocSinh.View.Controls.QuanLyTaiKhoan.QuanLyTaiKhoanMainUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.QuanLyTaiKhoan"
             Background="White"
             FontSize="13"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:viewmodel="clr-namespace:QuanLyHocSinh.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:ControlBarViewModel}"
             Name="ucQuanLyTaiKhoan"
             mc:Ignorable="d"
             MinHeight="600" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="QUẢN LÝ TÀI KHOẢN"
                   FontSize="24"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="10 10 0 10"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid Background="#f5f6f7" 
                      Margin="10"
                      materialDesign:ButtonAssist.CornerRadius="10">
                    <TextBox Margin="10,0,30,0"
                             VerticalContentAlignment="Center"
                             Background="Transparent"
                             FontSize="13"
                             Foreground="Gray"
                             materialDesign:HintAssist.Hint="Họ và Tên"
                             BorderThickness="0"/>
                    <materialDesign:PackIcon Kind="Search"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <ComboBox materialDesign:HintAssist.Hint="Vai trò"
                          IsEditable="False"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          Margin="10"
                          FontSize="13">
                    <ComboBoxItem Content="Học sinh"/>
                    <ComboBoxItem Content="Giáo viên"/>
                </ComboBox>
            </Grid>

            <Border Grid.Column="2"
                    Margin="20"
                    BorderThickness="1"
                    CornerRadius="10"
                    BorderBrush="#03a9f4"
                    Background="#D0F0FD">
                <Button ToolTip="Lọc tài khoản"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Margin="-10">
                        <materialDesign:PackIcon Kind="Filter" VerticalAlignment="Center" Foreground="Black"/>
                        <TextBlock Text="Lọc"
                                   Margin="10 0 0 0"
                                   FontWeight="Regular"
                                   Foreground="Black"           
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>

            <Border Grid.Column="3"
                    Margin="20"
                    BorderThickness="0"
                    CornerRadius="10"
                    BorderBrush="#03a9f4"
                    Background="#0078D7">
                <Button Command="{Binding ShowThemTaiKhoanCommand}"
                        ToolTip="Thêm tài khoản"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Margin="-10">
                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Foreground="Black"/>
                        <TextBlock Text="Thêm"
                                   Margin="10 0 0 0"
                                   FontWeight="Regular"
                                   Foreground="Black"           
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Margin="10">
            <DataGrid x:Name="dataGridTaiKhoan"
                      ItemsSource="{Binding Users}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      FontSize="13"
                      IsReadOnly="True"
                      RowHeight="40"
                      ColumnHeaderHeight="40">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Background" Value="#E0E0E0"/>
                        <Setter Property="Height" Value="40"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="👤" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <materialDesign:PackIcon Kind="AccountCircle" Width="20" Height="20" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="UserID" Binding="{Binding UserID}" Width="100"/>
                    <DataGridTextColumn Header="Họ và Tên" Binding="{Binding HoTen}" Width="200"/>
                    <DataGridTextColumn Header="Tên đăng nhập" Binding="{Binding TenDangNhap}" Width="200"/>
                    <DataGridTextColumn Header="Mật khẩu" Binding="{Binding MatKhau}" Width="150"/>

                    <!-- Sửa binding tại đây -->
                    <DataGridTextColumn Header="Vai trò" 
                                        Binding="{Binding VaiTro.TenVaiTro, TargetNullValue='[Chưa có vai trò]'}" 
                                        Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>