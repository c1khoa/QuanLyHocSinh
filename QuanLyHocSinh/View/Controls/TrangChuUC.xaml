<UserControl x:Class="QuanLyHocSinh.View.Controls.TrangChuUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
                    
             Background="White"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:viewmodel="clr-namespace:QuanLyHocSinh.ViewModel"
             Name="ucTrangChu"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="TRANG CHỦ"
                    FontSize="24"
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid 
                Grid.Column="0">
                <Grid Margin="30 10 30 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                                    CornerRadius="10, 10, 0, 0"
                                    Background="#03a9f4"
                                    Padding="10">
                        <Grid>
                            <TextBlock Text="HỌC SINH"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1"
                                    CornerRadius="0, 0, 10, 10"
                                    Padding="10"
                                    BorderBrush="#03a9f4"
                                    BorderThickness="2">
                        <Grid>
                            <TextBlock Text="{Binding SoLuongHocSinh}"
                                       ToolTip="Số học sinh"
                                       FontSize="40"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid Margin="30 10 30 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            CornerRadius="10, 10, 0, 0"
                            Background="#03a9f4"
                            Padding="10">
                        <Grid>
                            <TextBlock Text="LỚP HỌC"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1"
                            CornerRadius="0, 0, 10, 10"
                            Padding="10"
                            BorderBrush="#03a9f4"
                            BorderThickness="2">
                        <Grid>
                            <TextBlock Text="{Binding SoLuongLop}"
                                       ToolTip="Số lớp"
                                       FontSize="40"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                </Grid>

            </Grid>

            <Grid Grid.Column="2">
                <Grid Margin="30 10 30 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            CornerRadius="10, 10, 0, 0"
                            Background="#03a9f4"
                            Padding="10">
                        <Grid>
                            <TextBlock Text="GIÁO VIÊN"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1"
                            CornerRadius="0, 0, 10, 10"
                            Padding="10"
                            BorderBrush="#03a9f4"
                            BorderThickness="2">
                        <Grid>
                            <TextBlock Text="{Binding SoLuongGiaoVien}"
                                       ToolTip="Số giáo viên"
                                       FontSize="40"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    CornerRadius="10"
                    Padding="10"
                    BorderThickness="2"
                    BorderBrush="#03a9f4"
                    Margin="20">
                <Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="2*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <lvc:PieChart Grid.Row="0"
                                      Series="{Binding GioiTinhSeries}" 
                                      LegendLocation="Right"
                                      InnerRadius="10"
                                      HoverPushOut="5"/>
                            <lvc:PieChart Grid.Row="1"
                                      Series="{Binding XepLoaiPieSeries}"
                                      LegendLocation="Right"
                                      InnerRadius="10"
                                      HoverPushOut="5"/>
                        </Grid>
                        <lvc:CartesianChart Grid.Column="0"
                                            Series="{Binding MonHocSeries}">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Môn học" Labels="{Binding MonHocLabels}"/>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Điểm trung bình" LabelFormatter="{Binding Formatter}" />
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="1"
                    CornerRadius="10"
                    Padding="10"
                    BorderThickness="2"
                    BorderBrush="#03a9f4"
                    Margin="20">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="5*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock Text="THÔNG BÁO"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <ListBox FontSize="13">

                            <ListBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="•" 
                                               Margin="0,0,5,0" 
                                               Grid.Column="0"/>
                                    <TextBlock Text="20/04/2024 - Thông báo nghỉ lễ 30/4 và 1/5" 
                                               TextWrapping="Wrap" 
                                               Grid.Column="1"/>
                                </Grid>
                            </ListBoxItem>

                            <ListBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="•" 
                                               Margin="0,0,5,0" 
                                               Grid.Column="0"/>
                                    <TextBlock Text="05/05/2025 - Thông báo lịch thi cuối kỳ"
                                               TextWrapping="Wrap" 
                                               Grid.Column="1"/>
                                </Grid>
                            </ListBoxItem>

                            <ListBoxItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="•" 
                                               Margin="0,0,5,0" 
                                               Grid.Column="0"/>
                                    <TextBlock Text="15/05/2025 - Thông báo lịch thi tốt nghiệp" 
                                                TextWrapping="Wrap" 
                                               Grid.Column="1"/>
                                </Grid>
                            </ListBoxItem>

                        </ListBox>

                    </Grid>

                </Grid>

            </Border>

        </Grid>

    </Grid>
</UserControl>
