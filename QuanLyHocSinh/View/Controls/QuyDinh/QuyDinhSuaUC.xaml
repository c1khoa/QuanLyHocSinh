<UserControl x:Class="QuanLyHocSinh.View.Controls.QuyDinh.QuyDinhSuaUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.QuyDinh"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Tiêu đề quy định:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtTitle" Height="25" Margin="0,0,0,10" 
                     Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Mô tả chi tiết:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescription" Height="80" TextWrapping="Wrap" 
                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"
                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnSave" Content="Lưu" Width="100" Height="30" Margin="0,0,10,0" 
                        Command="{Binding SaveCommand}"/>
                <Button x:Name="btnBack" Content="Quay lại" Width="100" Height="30" 
                        Command="{Binding BackCommand}"/>
            </StackPanel>
        </StackPanel>

        <Rectangle Grid.Row="0" Grid.RowSpan="3" Stroke="LightGray" StrokeThickness="1" Margin="-5"/>
    </Grid>
</UserControl>