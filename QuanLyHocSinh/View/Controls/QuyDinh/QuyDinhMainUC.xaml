<UserControl x:Class="QuanLyHocSinh.View.Controls.QuyDinh.QuyDinhMainUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls"
             xmlns:viewModel="clr-namespace:QuanLyHocSinh.ViewModel.QuyDinh"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="800" FontSize="14">

    <Grid x:Name="MainGrid" Background="#FFF9FAFB">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="25">

                <!-- Quy định tuổi -->
                <GroupBox Header="Quy định về Tuổi" FontWeight="Bold" Margin="0,0,0,10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Học sinh:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding QuyDinhHocSinh.TuoiToiThieu, StringFormat='Tuổi tối thiểu: {0}'}"/>
                        <TextBlock Text="{Binding QuyDinhHocSinh.TuoiToiDa, StringFormat='Tuổi tối đa: {0}'}" Margin="0,0,0,5"/>
                        <TextBlock Text="Giáo viên:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding QuyDinhGiaoVien.TuoiToiThieu, StringFormat='Tuổi tối thiểu: {0}'}"/>
                        <TextBlock Text="{Binding QuyDinhGiaoVien.TuoiToiDa, StringFormat='Tuổi tối đa: {0}'}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Quy định môn học -->
                <GroupBox Header="Quy định môn học" FontWeight="Bold" Margin="0,10,0,10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Số lượng môn học: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding SoLuongMonHoc}" Margin="0,0,0,5"/>
                        <TextBlock Text="Điểm đạt: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding DiemDat}" Margin="0,0,0,5"/>
                        <TextBlock Text="Danh sách môn học:" FontWeight="SemiBold"/>
                        <ItemsControl ItemsSource="{Binding DanhSachMonHoc}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TenMonHoc}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </GroupBox>

                <!-- Quy định lớp -->
                <GroupBox Header="Quy định lớp" FontWeight="Bold" Margin="0,10,0,10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Sĩ số lớp tối đa: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding SiSoLopToiDa}" Margin="0,0,0,5"/>
                        <TextBlock Text="Danh sách lớp:" FontWeight="SemiBold"/>
                        <ItemsControl ItemsSource="{Binding DanhSachLop}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TenLop}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </GroupBox>

                <!-- Quy định khác -->
                <GroupBox Header="Quy định khác" FontWeight="Bold" Margin="0,10,0,10" Padding="10">
                    <TextBlock Text="{Binding QuyDinhKhac}" TextWrapping="Wrap"/>
                </GroupBox>

                <!-- Các nút chỉnh sửa -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="Chỉnh sửa quy định tuổi" Command="{Binding EditQuyDinhTuoiCommand}" Margin="5"/>
                    <Button Content="Chỉnh sửa quy định môn học" Command="{Binding EditQuyDinhMonHocCommand}" Margin="5"/>
                    <Button Content="Chỉnh sửa quy định lớp" Command="{Binding EditQuyDinhLopCommand}" Margin="5"/>
                    <Button Content="Chỉnh sửa quy định khác" Command="{Binding EditQuyDinhKhacCommand}" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>