<UserControl x:Class="QuanLyHocSinh.View.Controls.QuyDinh.QuyDinhMainUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="MainGrid" Background="#FFF9FAFB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Text="Danh Sách Quy Định" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="#333"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Regulations}" 
                  SelectedItem="{Binding SelectedRegulation}" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  RowBackground="#FFF0F0F0" 
                  AlternatingRowBackground="White" 
                  BorderBrush="#DDD" BorderThickness="1"
                  SelectionMode="Single"
                  Margin="0,0,0,20">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Tuổi Tối Thiểu" Binding="{Binding TuoiToiThieu}" Width="125"/>
                <DataGridTextColumn Header="Tuổi Tối Đa" Binding="{Binding TuoiToiDa}" Width="125"/>
                <DataGridTextColumn Header="Sĩ Số Lớp" Binding="{Binding SiSoLop}" Width="100"/>
                <DataGridTextColumn Header="Số Lượng Môn Học" Binding="{Binding SoLuongMonHoc}" Width="150"/>
                <DataGridTextColumn Header="Điểm Đạt" Binding="{Binding DiemDat}" Width="100"/>
                <DataGridTextColumn Header="Quy Định Khác" Binding="{Binding QuyDinhKhac}" Width="200"/>
                <DataGridTemplateColumn Header=" " Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Xóa" 
                                    Padding="4,2"
                                    Command="{Binding DataContext.DeleteRegulationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" 
                                    Background="#E74C3C" 
                                    Foreground="White" 
                                    FontWeight="Bold" 
                                    BorderThickness="0" 
                                    Cursor="Hand"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    
        <Border Grid.Row="2" Background="White" Padding="15" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Thêm Quy Định Mới" FontSize="20" FontWeight="SemiBold" Foreground="#222" Margin="0,0,0,15"/>

                <UniformGrid Columns="3" Margin="0,0,0,15" HorizontalAlignment="Stretch" VerticalAlignment="Top"  >

                    <StackPanel Margin="5,0">
                        <TextBlock Text="Tuổi Tối Thiểu" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding NewQuyDinh.TuoiToiThieu, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6" BorderBrush="#CCC" BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel Margin="5,0">
                        <TextBlock Text="Tuổi Tối Đa" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding NewQuyDinh.TuoiToiDa, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6" BorderBrush="#CCC" BorderThickness="1" />
                    </StackPanel>

                    <StackPanel Margin="5,0">
                        <TextBlock Text="Sĩ Số Lớp" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding NewQuyDinh.SiSoLop, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6" BorderBrush="#CCC" BorderThickness="1" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Margin="0,0,0,15">
                    <StackPanel Margin="5,0">
                        <TextBlock Text="Số Lượng Môn Học" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding NewQuyDinh.SoLuongMonHoc, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6" BorderBrush="#CCC" BorderThickness="1" />
                    </StackPanel>

                    <StackPanel Margin="5,0">
                        <TextBlock Text="Điểm Đạt" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding NewQuyDinh.DiemDat, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6" BorderBrush="#CCC" BorderThickness="1" />
                    </StackPanel>
                </UniformGrid>

                <StackPanel Margin="5,0,0,10">
                    <TextBlock Text="Quy Định Khác" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    <TextBox Text="{Binding NewQuyDinh.QuyDinhKhac, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="6" BorderBrush="#CCC" BorderThickness="1"  AcceptsReturn="True" Height="60"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" >
                    <Button Content="Thêm Quy Định" 
                            Padding="12,6" Margin="0,0,12,0" 
                            Command="{Binding AddRegulationCommand}" 
                            Background="#2E86C1" Foreground="White" FontWeight="SemiBold" 
                            BorderThickness="0" Cursor="Hand" 
                            Width="120" />
                    <Button Content="Sửa Quy Định" 
                            Padding="12,6" 
                            Command="{Binding EditRegulationCommand}" 
                            Background="#F39C12" Foreground="White" FontWeight="SemiBold" 
                            BorderThickness="0" Cursor="Hand"
                            Width="120" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
