<UserControl x:Class="QuanLyHocSinh.View.Controls.TraCuu.TraCuuGiaoVienUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.TraCuu"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">   
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/QuanLyHocSinh;component/ResourceXaml/MainResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <!-- Tiêu đề -->
        <TextBlock Text="DANH SÁCH GIÁO VIÊN"
                   FontSize="24"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="10 10 0 10"
                   Grid.Row="0"/>
        <!-- Thanh tìm kiếm, lọc -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="#f5f6f7" Margin="10" materialDesign:ButtonAssist.CornerRadius="10">
                <TextBox x:Name="txtSearch"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="10,0,30,0"
                         VerticalContentAlignment="Center"
                         Background="Transparent"
                         FontSize="13"
                         Foreground="Gray"
                         materialDesign:HintAssist.Hint="Tìm kiếm giáo viên..."
                         BorderThickness="0"/>
                <materialDesign:PackIcon Kind="Search"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Right"/>
            </Grid>
            <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Giới tính" FontSize="13"/>
                <ComboBox materialDesign:HintAssist.Hint="Giới tính"
                          IsEditable="False"
                          FontSize="13"
                          ItemsSource="{Binding DanhSachGioiTinh}"
                          SelectedItem="{Binding SelectedGioiTinh, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Lớp" FontSize="13"/>
                <ComboBox materialDesign:HintAssist.Hint="Lớp"
                          IsEditable="False"
                          FontSize="13"
                          ItemsSource="{Binding DanhSachLop}"
                          SelectedItem="{Binding SelectedLop, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Grid.Column="3" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Bộ môn" FontSize="13"/>
                <ComboBox materialDesign:HintAssist.Hint="Bộ môn"
                          IsEditable="False"
                          FontSize="13"
                          ItemsSource="{Binding DanhSachBoMon}"
                          SelectedItem="{Binding SelectedBoMon, Mode=TwoWay}"/>
            </StackPanel>
        </Grid>
        <!-- Danh sách giáo viên -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding DanhSachGiaoVien}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="10"
                  RowHeight="50"
                  ColumnHeaderHeight="40"
                  HeadersVisibility="Column"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  SelectedItem="{Binding SelectedGiaoVien, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã GV" Binding="{Binding MaGV}" Width="*" />
                <DataGridTextColumn Header="Họ và Tên" Binding="{Binding HoTen}" Width="1.5*" />
                <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh}" Width="*" />
                <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" Width="0.5*" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="1.5*" />
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}" Width="*" />
                <DataGridTextColumn Header="Lớp dạy" Binding="{Binding LopDayID}" Width="*" />
                <DataGridTextColumn Header="Bộ môn" Binding="{Binding BoMon}" Width="*" />
                <DataGridTemplateColumn Header="Chức năng" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    ToolTip="Sửa thông tin giáo viên">
                                <materialDesign:PackIcon Kind="Pencil" Foreground="#0078D7"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>