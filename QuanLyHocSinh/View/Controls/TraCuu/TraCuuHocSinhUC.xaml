<UserControl x:Class="QuanLyHocSinh.View.Controls.TraCuu.TraCuuHocSinhUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.TraCuu"
             Background="White"
             FontSize="13"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:viewmodel="clr-namespace:QuanLyHocSinh.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:ControlBarViewModel}"
             Name="ucTraCuuHocSinh"
             mc:Ignorable="d"
             MinHeight="600" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="DANH SÁCH HỌC SINH"
                   FontSize="24"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="10 10 0 10"
                   Grid.Row="0"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="#f5f6f7" Margin="10" materialDesign:ButtonAssist.CornerRadius="10">
                <TextBox x:Name="txtSearch"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="10,0,30,0"
                         VerticalContentAlignment="Center"
                         Background="Transparent"
                         FontSize="13"
                         Foreground="Gray"
                         materialDesign:HintAssist.Hint="Tìm kiếm học sinh..."
                         BorderThickness="0"/>
                <materialDesign:PackIcon Kind="Search"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Right"/>
            </Grid>
            <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Giới tính" FontSize="13"/>
                <ComboBox materialDesign:HintAssist.Hint="Giới tính"
                          IsEditable="False"
                          FontSize="13"
                          ItemsSource="{Binding DanhSachGioiTinh}"
                          SelectedItem="{Binding SelectedGioiTinh, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Lớp" FontSize="13"/>
                <ComboBox materialDesign:HintAssist.Hint="Lớp"
                          IsEditable="False"
                          FontSize="13"
                          ItemsSource="{Binding DanhSachLop}"
                          SelectedItem="{Binding SelectedLop, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Grid.Column="3" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Niên khóa" FontSize="13"/>
                <ComboBox materialDesign:HintAssist.Hint="Niên khóa"
                          IsEditable="False"
                          FontSize="13"
                          ItemsSource="{Binding DanhSachNienKhoa}"
                          SelectedItem="{Binding SelectedNienKhoa, Mode=TwoWay}"/>
            </StackPanel>
        </Grid>
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding DanhSachHocSinh}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="10"
                  RowHeight="60"
                  ColumnHeaderHeight="40"
                  HeadersVisibility="Column"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  SelectedItem="{Binding SelectedHocSinh, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã HS" Binding="{Binding HocSinhID}" Width="*"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" Width="1.5*" />
                <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" Width="*" />
                <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh, StringFormat=dd/MM/yyyy}" Width="*" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*" />
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}" Width="*" />
                <DataGridTextColumn Header="Lớp" Binding="{Binding TenLop}" Width="*" />
                <DataGridTextColumn Header="Niên khóa" Binding="{Binding NienKhoa}" Width="*" />
                <DataGridTemplateColumn Header="Chức năng" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    ToolTip="Sửa thông tin học sinh">
                                <materialDesign:PackIcon Kind="Pencil" Foreground="#0078D7"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
