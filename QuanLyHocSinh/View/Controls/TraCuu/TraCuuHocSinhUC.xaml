<UserControl x:Class="QuanLyHocSinh.View.Controls.TraCuu.TraCuuHocSinhUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.TraCuu"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="White"
             FontSize="13"
             mc:Ignorable="d"
             MinHeight="600" MinWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/QuanLyHocSinh;component/ResourceXaml/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            
            <!-- Tiêu đề -->
            <TextBlock Text="DANH SÁCH HỌC SINH"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10 10 0 10"
                       Grid.Row="0"/>
                       
            <!-- Thanh tìm kiếm, lọc -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0" Background="#f5f6f7" Margin="10" materialDesign:ButtonAssist.CornerRadius="10">
                    <TextBox x:Name="txtSearch"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Margin="10,0,30,0"
                             VerticalContentAlignment="Center"
                             Background="Transparent"
                             FontSize="13"
                             Foreground="Gray"
                             materialDesign:HintAssist.Hint="Tìm kiếm học sinh..."
                             BorderThickness="0"/>
                    <materialDesign:PackIcon Kind="Search"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"/>
                </Grid>
                
                <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Center">
                    <TextBlock Text="Giới tính" FontSize="13"/>
                    <ComboBox materialDesign:HintAssist.Hint="Giới tính"
                              IsEditable="False"
                              FontSize="13"
                              ItemsSource="{Binding DanhSachGioiTinh}"
                              SelectedItem="{Binding SelectedGioiTinh, Mode=TwoWay}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Center">
                    <TextBlock Text="Lớp" FontSize="13"/>
                    <ComboBox materialDesign:HintAssist.Hint="Lớp"
                              IsEditable="False"
                              FontSize="13"
                              ItemsSource="{Binding DanhSachLop}"
                              SelectedItem="{Binding SelectedLop, Mode=TwoWay}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Margin="10" VerticalAlignment="Center">
                    <TextBlock Text="Niên khóa" FontSize="13"/>
                    <ComboBox materialDesign:HintAssist.Hint="Niên khóa"
                              IsEditable="False"
                              FontSize="13"
                              ItemsSource="{Binding DanhSachNienKhoa}"
                              SelectedItem="{Binding SelectedNienKhoa, Mode=TwoWay}"/>
                </StackPanel>
            </Grid>
              <!-- Danh sách học sinh -->
            <DataGrid Grid.Row="2"
                      ItemsSource="{Binding DanhSachHocSinh}"
                      Style="{StaticResource CommonDataGridStyle}"
                      SelectedItem="{Binding SelectedHocSinh, Mode=TwoWay}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã HS" 
                                      Binding="{Binding HocSinhID}" 
                                      Width="*"
                                      ElementStyle="{StaticResource CenterAlignStyle}"/>
                    <DataGridTextColumn Header="Họ tên" 
                                      Binding="{Binding HoTen}" 
                                      Width="1.5*"/>
                    <DataGridTextColumn Header="Giới tính" 
                                      Binding="{Binding GioiTinh}" 
                                      Width="*"
                                      ElementStyle="{StaticResource CenterAlignStyle}"/>
                    <DataGridTextColumn Header="Ngày sinh" 
                                      Binding="{Binding NgaySinh, StringFormat=dd/MM/yyyy}" 
                                      Width="*"
                                      ElementStyle="{StaticResource CenterAlignStyle}"/>
                    <DataGridTextColumn Header="Email" 
                                      Binding="{Binding Email}" 
                                      Width="2*"/>
                    <DataGridTextColumn Header="Địa chỉ" 
                                      Binding="{Binding DiaChi}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Lớp" 
                                      Binding="{Binding TenLop}" 
                                      Width="*"
                                      ElementStyle="{StaticResource CenterAlignStyle}"/>
                    <DataGridTextColumn Header="Niên khóa" 
                                      Binding="{Binding NienKhoa}" 
                                      Width="*"
                                      ElementStyle="{StaticResource CenterAlignStyle}"/>
                    <DataGridTemplateColumn Header="Chức năng" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource MaterialDesignToolButton}"
                                            Background="Transparent" BorderThickness="0"
                                            Width="32" Height="32" Padding="0"
                                            Command="{Binding DataContext.XemBangDiemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Xem bảng điểm">
                                        <materialDesign:PackIcon Kind="Eye" Width="22" Height="22" Foreground="#1976D2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignToolButton}"
                                            Background="Transparent" BorderThickness="0"
                                            Width="32" Height="32" Padding="0" Margin="8,0,0,0"
                                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            ToolTip="Sửa thông tin học sinh">
                                        <materialDesign:PackIcon Kind="Pencil" Width="22" Height="22" Foreground="#0078D7" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

</UserControl>
