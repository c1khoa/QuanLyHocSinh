<UserControl x:Class="QuanLyHocSinh.View.Controls.TraCuu.TraCuuDiemHocSinhUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.TraCuu"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/QuanLyHocSinh;component/ResourceXaml/MainResource.xaml"/>
                </ResourceDictionary.MergedDictionaries>
                <local:DiemToDisplayStringConverter x:Key="DiemToDisplayStringConverter"/>
                <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="DANH SÁCH ĐIỂM HỌC SINH"
                   FontSize="24"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="10 10 0 10"
                   Grid.Row="0"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="#f5f6f7" Margin="10" materialDesign:ButtonAssist.CornerRadius="10">
                <TextBox x:Name="txtSearch"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="10,0,30,0"
                         VerticalContentAlignment="Center"
                         Background="Transparent"
                         FontSize="13"
                         Foreground="Gray"
                         materialDesign:HintAssist.Hint="Tìm kiếm điểm học sinh..."
                         BorderThickness="0"/>
                <materialDesign:PackIcon Kind="Search"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Right"/>
            </Grid>
            <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Lớp" FontSize="13"/>
            <ComboBox Grid.Column="1"
                      materialDesign:HintAssist.Hint="Lớp"
                      IsEditable="False"
                      Margin="10"
                      FontSize="13"
                      ItemsSource="{Binding DanhSachLop}"
                      SelectedItem="{Binding SelectedLop, Mode=TwoWay}">
            </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Môn học" FontSize="13"/>
            <ComboBox Grid.Column="2"
                      materialDesign:HintAssist.Hint="Môn học"
                      IsEditable="False"
                      Margin="10"
                      FontSize="13"
                      ItemsSource="{Binding DanhSachMonHoc}"
                      SelectedItem="{Binding SelectedMonHoc, Mode=TwoWay}">
            </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="3" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Năm học" FontSize="13"/>
            <ComboBox Grid.Column="3"
                      materialDesign:HintAssist.Hint="Năm học"
                      IsEditable="False"
                      Margin="10"
                      FontSize="13"
                      ItemsSource="{Binding DanhSachNamHoc}"
                      SelectedItem="{Binding SelectedNamHoc, Mode=TwoWay}">
            </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="4" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Học kỳ" FontSize="13"/>
            <ComboBox Grid.Column="4"
                      materialDesign:HintAssist.Hint="Học kỳ"
                      IsEditable="False"
                      Margin="10"
                      FontSize="13"
                      ItemsSource="{Binding DanhSachHocKy}"
                      SelectedItem="{Binding SelectedHocKy, Mode=TwoWay}">
            </ComboBox>
            </StackPanel>
        </Grid>
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding DanhSachDiem}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="10"
                  RowHeight="50"
                  ColumnHeaderHeight="40"
                  HeadersVisibility="Column"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  SelectedItem="{Binding SelectedDiem, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã HS" Binding="{Binding MaHS}" Width="*"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" Width="1.5*"/>
                <DataGridTextColumn Header="Lớp" Binding="{Binding Lop}" Width="*"/>
                <DataGridTextColumn Header="Môn học" Binding="{Binding MonHoc}" Width="*"/>
                <DataGridTextColumn Header="Năm học" Binding="{Binding NamHocID}" Width="*"/>
                <DataGridTextColumn Header="Học kỳ" Binding="{Binding HocKy}" Width="0.5*"/>
                <DataGridTextColumn Header="Điểm miệng" Binding="{Binding DiemMieng, Converter={StaticResource DiemToDisplayStringConverter}}" Width="*"/>
                <DataGridTextColumn Header="Điểm 15 phút" Binding="{Binding Diem15p, Converter={StaticResource DiemToDisplayStringConverter}}" Width="*"/>
                <DataGridTextColumn Header="Điểm 1 tiết" Binding="{Binding Diem1Tiet, Converter={StaticResource DiemToDisplayStringConverter}}" Width="*"/>
                <DataGridTextColumn Header="Điểm thi" Binding="{Binding DiemThi, Converter={StaticResource DiemToDisplayStringConverter}}" Width="*"/>
                <DataGridTextColumn Header="Điểm TB" Binding="{Binding DiemTB, Converter={StaticResource DiemToDisplayStringConverter}}" Width="*"/>
                <DataGridTemplateColumn Header="Chức năng"
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    Visibility="{Binding DataContext.IsNotHocSinhVisible, ElementName=main, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    ToolTip="Sửa điểm">
                                <materialDesign:PackIcon Kind="Pencil" Foreground="#0078D7"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>