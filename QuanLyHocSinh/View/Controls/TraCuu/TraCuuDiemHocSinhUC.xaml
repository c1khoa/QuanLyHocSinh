<UserControl x:Class="QuanLyHocSinh.View.Controls.TraCuu.TraCuuDiemHocSinhUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.TraCuu"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="White"
             FontSize="13"
             mc:Ignorable="d" 
             MinHeight="600" MinWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/QuanLyHocSinh;component/ResourceXaml/CommonStyles.xaml"/>
                <ResourceDictionary Source="/QuanLyHocSinh;component/ResourceXaml/MainResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DiemToDisplayStringConverter x:Key="DiemToDisplayStringConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="DANH SÁCH ĐIỂM HỌC SINH"
                   FontSize="24"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="10 10 0 10"
                   Grid.Row="0"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="#f5f6f7" Margin="10" materialDesign:ButtonAssist.CornerRadius="10">
                <TextBox x:Name="txtSearch"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="10,0,30,0"
                         VerticalContentAlignment="Center"
                         Background="Transparent"
                         FontSize="13"
                         Foreground="Gray"
                         materialDesign:HintAssist.Hint="Tìm kiếm điểm học sinh..."
                         BorderThickness="0"/>
                <materialDesign:PackIcon Kind="Search"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Right"/>
            </Grid>
            <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Lớp" FontSize="13"/>
                <ComboBox materialDesign:HintAssist.Hint="Lớp"
                          IsEditable="False"
                          FontSize="13"
                          ItemsSource="{Binding DanhSachLop}"
                          SelectedItem="{Binding SelectedLop, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Môn học" FontSize="13"/>
                <ComboBox materialDesign:HintAssist.Hint="Môn học"
                          IsEditable="False"
                          FontSize="13"
                          ItemsSource="{Binding DanhSachMonHoc}"
                          SelectedItem="{Binding SelectedMonHoc, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Grid.Column="3" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Năm học" FontSize="13"/>
                <ComboBox materialDesign:HintAssist.Hint="Năm học"
                          IsEditable="False"
                          FontSize="13"
                          ItemsSource="{Binding DanhSachNamHoc}"
                          SelectedItem="{Binding SelectedNamHoc, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Grid.Column="4" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Học kỳ" FontSize="13"/>
                <ComboBox materialDesign:HintAssist.Hint="Học kỳ"
                          IsEditable="False"
                          FontSize="13"
                          ItemsSource="{Binding DanhSachHocKy}"
                          SelectedItem="{Binding SelectedHocKy, Mode=TwoWay}"/>
            </StackPanel>
        </Grid>
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding DanhSachDiem}"
                  Style="{StaticResource CommonDataGridStyle}"
                  SelectedItem="{Binding SelectedDiem, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã HS" Binding="{Binding MaHS}" Width="*" ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" Width="1.5*"/>
                <DataGridTextColumn Header="Lớp" Binding="{Binding Lop}" Width="*" ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Môn học" Binding="{Binding MonHoc}" Width="*" ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Năm học" Binding="{Binding NamHocID}" Width="*" ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Học kỳ" Binding="{Binding HocKy}" Width="0.5*" ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Điểm miệng" Binding="{Binding DiemMieng, Converter={StaticResource DiemToDisplayStringConverter}}" Width="*"/>
                <DataGridTextColumn Header="Điểm 15 phút" Binding="{Binding Diem15p, Converter={StaticResource DiemToDisplayStringConverter}}" Width="*"/>
                <DataGridTextColumn Header="Điểm 1 tiết" Binding="{Binding Diem1Tiet, Converter={StaticResource DiemToDisplayStringConverter}}" Width="*"/>
                <DataGridTextColumn Header="Điểm thi" Binding="{Binding DiemThi, Converter={StaticResource DiemToDisplayStringConverter}}" Width="*"/>
                <DataGridTextColumn Header="Điểm TB" Binding="{Binding DiemTB, Converter={StaticResource DiemToDisplayStringConverter}}" Width="*"/>
                <DataGridTemplateColumn Header="Chức năng" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    ToolTip="Sửa điểm">
                                <materialDesign:PackIcon Kind="Pencil" Foreground="#0078D7"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>