<UserControl x:Class="QuanLyHocSinh.View.Controls.TraCuu.TraCuuDiemHocSinhUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.TraCuu"

                          Background="White"
             FontSize="13"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:viewmodel="clr-namespace:QuanLyHocSinh.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:ControlBarViewModel}"
             Name="ucTraCuuHocSinh"
             mc:Ignorable="d"
             MinHeight="600" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid Grid.Column="0">
                <TextBlock Text="DANH SÁCH ĐIỂM HỌC SINH"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10 10 0 10"/>
            </Grid>

        </Grid>
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid Background="#f5f6f7" 
                      Margin="10"
                      materialDesign:ButtonAssist.CornerRadius="10"
>
                    <TextBox Margin="10,0,30,0"
                             VerticalContentAlignment="Center"
                             Background="Transparent"
                             FontSize="13"
                             Foreground="Gray"
                             materialDesign:HintAssist.Hint="Họ và Tên"
                             BorderThickness="0"/>
                    <materialDesign:PackIcon Kind="Search"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"/>
                </Grid>

            </Grid>

            <Grid Grid.Column="1">
                <ComboBox materialDesign:HintAssist.Hint="Lớp dạy"
                          IsEditable="False"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          Margin="10"
                          FontSize="13">

                    <ComboBoxItem IsSelected="False"
                                  Content="10A1"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="10A2"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="10A3"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="10B1"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="10B2"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="10C1"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="11A1"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="11A2"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="11A3"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="11B1"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="11B2"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="11C1"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="12A1"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="12A2"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="12A3"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="12B1"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="12B2"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="12C1"/>
                </ComboBox>
            </Grid>

            <Grid Grid.Column="2">
                <ComboBox materialDesign:HintAssist.Hint="Giới tính"
                          IsEditable="False"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          Margin="10"
                          FontSize="13">

                    <ComboBoxItem IsSelected="False"
                                  Content="Nam"/>
                    <ComboBoxItem IsSelected="False"
                                  Content="Nữ"/>
                </ComboBox>
            </Grid>

            <Border Grid.Column="3"
                    Margin="20"
                    BorderThickness="1"
                    CornerRadius="10"
                    BorderBrush="#03a9f4"
                    Background="#D0F0FD">
                <Button ToolTip="Lọc tài khoản"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal"
                                Margin="-10">
                        <materialDesign:PackIcon Kind="Filter"
                                                 VerticalAlignment="Center"
                                                 Foreground="Black"/>
                        <TextBlock Text="Lọc"
                                   Margin="10 0 0 0"
                                   FontWeight="Regular"
                                   Foreground="Black"           
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>

        </Grid>
        <Grid Grid.Row="2" Margin="10">
            <DataGrid ItemsSource="{Binding DiemHocSinh}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      FontSize="13"
                      IsReadOnly="True"
                      RowHeight="40"
                      ColumnHeaderHeight="40">
                <!-- Style="{StaticResource MaterialDesignDataGrid}" -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Background" Value="#E0E0E0"/>
                        <Setter Property="Height" Value="40"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="👤" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <materialDesign:PackIcon Kind="AccountCircle" 
                                                         Width="20" 
                                                         Height="20" 
                                                         HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="ID Học sinh"
                                        Binding="{Binding StudentID}"
                                        Width="*"
                                        ElementStyle="{StaticResource TextTrimmingStyle}"/>

                    <DataGridTextColumn Header="Họ và Tên"
                                        Binding="{Binding Fullname}"
                                        Width="*"
                                        ElementStyle="{StaticResource TextTrimmingStyle}"/>

                    <DataGridTextColumn Header="Lớp học"
                                        Binding="{Binding Class}"
                                        Width="*"
                                        ElementStyle="{StaticResource TextTrimmingStyle}"/>

                    <DataGridTextColumn Header="Trung bình HKI"
                                        Binding="{Binding Mean1}"
                                        Width="*"
                                        ElementStyle="{StaticResource TextTrimmingStyle}"/>

                    <DataGridTextColumn Header="Trung bình HKII"
                                        Binding="{Binding Mean2}"
                                        Width="*"
                                        ElementStyle="{StaticResource TextTrimmingStyle}"/>

                    <DataGridTemplateColumn Header="Chi tiết" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Chi tiết"
                                        Command="{Binding DataContext.XemChiTietCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#2196F3"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Padding" Value="5,2"/>
                                            <Setter Property="Margin" Value="5,0"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
