<Window x:Class="QuanLyHocSinh.View.DanhSachHocSinhWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh Sách Học Sinh" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding TenLop}" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding DanhSachHocSinh}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã HS" Binding="{Binding HocSinhID}" Width="1*"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" Width="2*"/>
                <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" Width="1*"/>
                <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh, StringFormat=dd/MM/yyyy}" Width="1.5*"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>