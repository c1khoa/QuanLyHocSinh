<UserControl x:Class="QuanLyHocSinh.View.Controls.BaoCao.TongKetMonUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHocSinh.View.Controls.BaoCao"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="White" 
             FontSize="13"
             mc:Ignorable="d" 
             MinHeight="600" MinWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/QuanLyHocSinh;component/ResourceXaml/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="ImageBorderStyle" TargetType="Border">
                <Setter Property="BorderBrush" Value="Gray"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="CornerRadius" Value="30"/>
                <Setter Property="Background" Value="{DynamicResource PrimaryMidBrush}"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="20 80 20 80"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Tiêu đề -->
        <TextBlock Text="BÁO CÁO TỔNG KẾT MÔN" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Margin="10 10 0 10"
                   Grid.Row="0"/>

        <!-- Bộ lọc -->
        <Border Grid.Row="1" Background="#f3e5f5" CornerRadius="15" Padding="15" Margin="10,0,10,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Center">
                    <TextBlock Text="Năm học" FontSize="13" Margin="0,0,0,5"/>
                    <ComboBox materialDesign:HintAssist.Hint="Năm học"
                              IsEditable="False"
                              FontSize="13"
                              ItemsSource="{Binding DanhSachNamHoc}" 
                              SelectedItem="{Binding SelectedNamHoc, Mode=TwoWay}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Center">
                    <TextBlock Text="Lớp" FontSize="13" Margin="0,0,0,5"/>
                    <ComboBox materialDesign:HintAssist.Hint="Lớp"
                              IsEditable="False"
                              FontSize="13"
                              ItemsSource="{Binding DanhSachLop}" 
                              SelectedItem="{Binding SelectedLop, Mode=TwoWay}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Center">
                    <TextBlock Text="Môn học" FontSize="13" Margin="0,0,0,5"/>
                    <ComboBox materialDesign:HintAssist.Hint="Môn học"
                              IsEditable="False"
                              FontSize="13"
                              ItemsSource="{Binding DanhSachMonHoc}" 
                              SelectedItem="{Binding SelectedMonHoc, Mode=TwoWay}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Margin="10" VerticalAlignment="Center">
                    <TextBlock Text="Học kỳ" FontSize="13" Margin="0,0,0,5"/>
                    <ComboBox materialDesign:HintAssist.Hint="Học kỳ"
                              IsEditable="False"
                              FontSize="13"
                              ItemsSource="{Binding DanhSachHocKy}" 
                              SelectedItem="{Binding SelectedHocKy, Mode=TwoWay}"/>
                </StackPanel>
            </Grid>
        </Border>     
        
        <!-- Bảng dữ liệu -->
        <Border Grid.Row="2" Background="White" CornerRadius="15" Padding="10" Margin="10" BorderBrush="#e0e0e0" BorderThickness="1">
            <DataGrid ItemsSource="{Binding DanhSachTongKetMon}" 
                      Style="{StaticResource CommonDataGridStyle}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      BorderBrush="Transparent"
                      Background="Transparent">
            <DataGrid.Columns>
                <DataGridTextColumn Header="STT" 
                                  Binding="{Binding STT}" 
                                  Width="60" 
                                  ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Mã HS" 
                                  Binding="{Binding HocSinhID}" 
                                  Width="80" 
                                  ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Họ tên" 
                                  Binding="{Binding HoTen}" 
                                  Width="*"/>
                <DataGridTextColumn Header="Lớp" 
                                  Binding="{Binding TenLop}" 
                                  Width="80" 
                                  ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Môn học" 
                                  Binding="{Binding MonHoc}" 
                                  Width="120" 
                                  ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Năm học" 
                                  Binding="{Binding NamHoc}" 
                                  Width="100" 
                                  ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Học kỳ" 
                                  Binding="{Binding HocKy}" 
                                  Width="80" 
                                  ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Điểm TB" 
                                  Binding="{Binding DiemTrungBinh, StringFormat=F2}" 
                                  Width="80" 
                                  ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Xếp loại" 
                                  Binding="{Binding XepLoai}" 
                                  Width="100" 
                                  ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTextColumn Header="Ghi chú" 
                                  Binding="{Binding GhiChu}" 
                                  Width="120" 
                                  ElementStyle="{StaticResource CenterAlignStyle}"/>
                <DataGridTemplateColumn Header="Chức năng" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Click="XemChiTiet_Click"
                                    ToolTip="Xem chi tiết tổng kết môn">
                                <materialDesign:PackIcon Kind="Magnify" Foreground="#0078D7"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <!-- Thông tin tổng kết -->
        <Border Grid.Row="3" Background="#e8f5e8" CornerRadius="15" Padding="15" Margin="10,0,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Left">
                    <TextBlock Text="Tổng học sinh: " 
                              FontWeight="Bold" 
                              Foreground="#2E7D32" 
                              FontSize="16"/>
                    <TextBlock Text="{Binding TongHocSinh}" 
                              Foreground="#2E7D32" 
                              FontWeight="Bold" 
                              FontSize="16" 
                              Margin="0,0,20,0"/>
                    <TextBlock Text="Số lượng đạt: " 
                              FontWeight="Bold" 
                              Foreground="#1565C0" 
                              FontSize="16"/>
                    <TextBlock Text="{Binding SoLuongDat}" 
                              Foreground="#1565C0" 
                              FontWeight="Bold" 
                              FontSize="16" 
                              Margin="0,0,20,0"/>
                    <TextBlock Text="Số lượng không đạt: " 
                              FontWeight="Bold" 
                              Foreground="#C62828" 
                              FontSize="16"/>
                    <TextBlock Text="{Binding SoLuongKhongDat}" 
                              Foreground="#C62828" 
                              FontWeight="Bold" 
                              FontSize="16" 
                              Margin="0,0,20,0"/>
                    <TextBlock Text="Tỉ lệ đạt: " 
                              FontWeight="Bold" 
                              Foreground="#1976D2" 
                              FontSize="16"/>
                    <TextBlock Text="{Binding TiLeDat, StringFormat={}{0:F2}%}" 
                              Foreground="#1976D2" 
                              FontWeight="Bold" 
                              FontSize="16"/>
                </StackPanel>

                <Border Grid.Column="1" 
                        Style="{StaticResource ImageBorderStyle}"
                        Margin="20 0 0 0"
                        Background="#4CAF50">
                    <Button Content="Xuất Excel" 
                            Command="{Binding ExportExcelCommand}"
                            BorderBrush="Transparent"
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            Background="Transparent"
                            HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
